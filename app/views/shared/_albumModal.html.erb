

    <div class="body-left">
      <%= image_tag(track.album.images.first['url'])%>
      <h4 ><%= link_to(track.artists.first.name, "https://open.spotify.com/artist/#{track.artists.first.id}", target:"_blank") %> </h4>
    </div>

    <div class="body-right">
      <ol>
      <% track.album.tracks.each do |trk| %>
        <li> <%= track.id == trk.id ? link_to(trk.name, "https://open.spotify.com/track/#{track.id}", target:"_blank", class:"active") : link_to(trk.name, "https://open.spotify.com/track/#{track.id}", target:"_blank" ) %> </li>
      <% end %>
      </ol>
    </div>
